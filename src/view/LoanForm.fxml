<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoanFormController">
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Loan a Book" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints prefWidth="250" />
            </columnConstraints>

            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <Label text="Copy ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="copyIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Member ID:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="memberIdField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Loan Date:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="loanDatePicker" promptText="YYYY-MM-DD" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Due Date:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="dueDatePickerr" promptText="YYYY-MM-DD" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        </GridPane>

        <Button text="Submit Loan" onAction="#handleSubmitLoan" />
        <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
        <Button text="Home" onAction="#handleHome"/>
    </VBox>
</AnchorPane>

