<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.OverdueLoansController">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Overdue Loans" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TableView fx:id="overdueTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="loanIdCol" text="Loan ID" />
                <TableColumn fx:id="copyIdCol" text="Copy ID" />
                <TableColumn fx:id="memberIdCol" text="Member ID" />
                <TableColumn fx:id="loanDateCol" text="Loan Date" />
                <TableColumn fx:id="dueDateCol" text="Due Date" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
