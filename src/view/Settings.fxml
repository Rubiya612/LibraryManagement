<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" padding="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.SettingsController">

    <Label text="Library Hours:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="hoursField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Fine Rate ($/day):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="fineRateField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Admin Users:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="adminField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Save Settings" GridPane.rowIndex="3" GridPane.columnSpan="2" GridPane.halignment="CENTER" fx:id="saveButton"/>

</GridPane>
