<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>


<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.HomeController"
      spacing="20" alignment="CENTER" style="-fx-padding: 40;">
    
    <Label text="Library Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <Label fx:id="totalBooksLabel" text="Total Books: 0" />
    <Label fx:id="totalPatronsLabel" text="Total Patrons: 0" />
    <Label fx:id="currentLoansLabel" text="Current Loans: 0" />
    <Label fx:id="overdueLoansLabel" text="Overdue Loans: 0" />
    
    
    <Button text="Manage Books" onAction="#goToBooks"/>
     <Button text="Manage Patrons" onAction="#goToPatrons"/>
     <Button text="Add Loans" onAction="#goToLoans"/>
      <Button text="Manage Loans" onAction="#goToLoans2"/>


</VBox>
