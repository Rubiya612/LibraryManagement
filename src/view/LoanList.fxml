<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoanListController">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        
        <Label text="All Loans" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TableView fx:id="loanTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="idCol" text="Loan ID" />
                <TableColumn fx:id="copyIdCol" text="Copy ID" />
                <TableColumn fx:id="memberIdCol" text="Member ID" />
                <TableColumn fx:id="loanDateCol" text="Loan Date" />
                <TableColumn fx:id="dueDateCol" text="Due Date" />
                <TableColumn fx:id="returnDateCol" text="Return Date" />
            </columns>
        </TableView>

        <Button text="Back to Home" onAction="#goToHome" />
    </VBox>

</AnchorPane>
