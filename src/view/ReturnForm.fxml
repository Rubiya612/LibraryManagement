<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ReturnFormController">
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Return a Book" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints prefWidth="200" />
            </columnConstraints>

            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <Label text="Loan ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="loanIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Return Date:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <DatePicker fx:id="returnDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        </GridPane>

        <Button text="Submit Return" onAction="#handleReturn" />
        <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
    </VBox>
</AnchorPane>
